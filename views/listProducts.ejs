<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h1 class="mb-4">All Products</h1>
  <a class="btn btn-primary mb-3" href="/products/new">Add New Product</a>

  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Product Name</th>
        <th>Price (â‚¹)</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach((product, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td>
            <div class="d-flex gap-2">
              <a href="/products/<%= product._id %>" class="btn btn-sm btn-info">View</a>
              <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
              <form action="/products/<%= product._id %>?_method=DELETE" method="POST" style="margin: 0;">
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
